<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Validate_the_format_of_the_phone_numbers</fullName>
    <active>true</active>
    <description>Phone number must be in the format (XXX) XXX-XXXX.</description>
    <errorConditionFormula>NOT(REGEX( Phone__c, &quot;\\([0-9]{3}\\) [0-9]{3}-[0-9]{4}&quot;))</errorConditionFormula>
    <errorDisplayField>Phone__c</errorDisplayField>
    <errorMessage>Phone number must be in the format (XXX) XXX-XXXX.</errorMessage>
</ValidationRule>
